<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_Light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Light</item>
        <item name="colorAccent">@color/colorAccent_Light</item>
        <item name="tchart_title_color">@color/tchart_title_Light</item>
        <item name="tchart_axis_text_color">@color/tchart_axis_text_Light</item>
        <item name="tchart_bars_x_axis_text_color">@color/tchart_bars_x_axis_text_Light</item>
        <item name="tchart_bars_y_axis_text_color">@color/tchart_bars_y_axis_text_Light</item>
        <item name="tchart_bars_mask_color">@color/tchart_bars_mask_Light</item>
        <item name="tchart_axis_line_color">@color/tchart_axis_line_Light</item>
        <item name="tchart_cursor_line_name_text_color">@color/tchart_cursor_line_name_text_color_Light</item>
        <item name="tchart_preview_faded_color">@color/tchart_preview_faded_Light</item>
        <item name="tchart_preview_frame_color">@color/tchart_preview_frame_Light</item>
        <item name="app_background_color">@color/app_background_Light</item>
        <item name="round_rect_shape">@drawable/round_rect_shape_light</item>
        <item name="mode_icon">@mipmap/mode_icon_2_light</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Dark</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>
        <item name="tchart_title_color">@color/tchart_title_Dark</item>
        <item name="tchart_axis_text_color">@color/tchart_axis_text_Dark</item>
        <item name="tchart_bars_x_axis_text_color">@color/tchart_bars_x_axis_text_Dark</item>
        <item name="tchart_bars_y_axis_text_color">@color/tchart_bars_y_axis_text_Dark</item>
        <item name="tchart_bars_mask_color">@color/tchart_bars_mask_Dark</item>
        <item name="tchart_axis_line_color">@color/tchart_axis_line_Dark</item>
        <item name="tchart_cursor_line_name_text_color">@color/tchart_cursor_line_name_text_color_Dark</item>
        <item name="tchart_preview_faded_color">@color/tchart_preview_faded_Dark</item>
        <item name="tchart_preview_frame_color">@color/tchart_preview_frame_Dark</item>
        <item name="app_background_color">@color/app_background_Dark</item>
        <item name="round_rect_shape">@drawable/round_rect_shape_dark</item>
        <item name="mode_icon">@mipmap/mode_icon_2_dark</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:background">?attr/app_background_color</item>
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
    </style>

</resources>
