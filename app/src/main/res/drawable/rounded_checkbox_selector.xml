<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <size
                        android:width="24dp"
                        android:height="24dp" />
                    <solid android:color="#00000000" />
                    <stroke
                        android:width="2dp"
                        android:color="#00FF00" />
                    <padding
                        android:left="2dp"
                        android:top="2dp"
                        android:right="2dp"
                        android:bottom="2dp" />
                </shape>
            </item>
            <item
                android:drawable="@drawable/icons8_checkmark_24" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <size
                        android:width="15dp"
                        android:height="24dp" />
                    <solid android:color="#00000000" />
                    <stroke
                        android:width="2dp"
                        android:color="#FF0000" />
                    <padding
                        android:left="2dp"
                        android:top="2dp"
                        android:right="2dp"
                        android:bottom="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>